<Window x:Class="PrototypeEDUCOM.View.ShowRequestView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShowRequestView" Height="300" Width="300">
    <Grid>
        <Label Content="Description" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="29"/>
        <Label Content="State" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,44,0,0" Height="29"/>
        <Label Content="{Binding description}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="85,10,0,0" Height="29"/>
        <Label Content="{Binding state}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="85,44,0,0" Height="29" RenderTransformOrigin="0.6,0.483"/>
    </Grid>
</Window>
